{
  "name": "devex",
  "private": true,
  "repository": "git@github.com:/theonejonahgold/real-time-web-2021.git",
  "author": "Jonah Meijers <jonahmeijers97@gmail.com>",
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "build": "concurrently 'yarn:build:web' 'yarn:build:server'",
    "build:web": "yarn workspace @devex/web build",
    "build:server": "yarn workspace @devex/server build",
    "dev": "concurrently 'yarn:dev:web' 'yarn:dev:server'",
    "dev:web": "yarn workspace @devex/web dev",
    "dev:server": "yarn workspace @devex/server dev"
  },
  "workspaces": [
    "web",
    "server"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
